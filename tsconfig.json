{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["types/**/*", "src/**/*"]
}
